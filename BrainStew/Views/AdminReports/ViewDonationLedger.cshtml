@model BrainStew.Models.AdminReports

@{
    ViewBag.Title = "ViewDonationLedger";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ViewDonationLedger", "AdminReports", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Donated Ledger Report</h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        @*<div class="row">
                            <input type="hidden" id="FK_DonationId" name="FK_DonationId" value="@Model.FK_DonationId " />
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Father Name</label>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = " Name" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>From Date</label>
                                    @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @placeholder = "dd/mm/yyyy", @readonly = "true" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>To Date</label>
                                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @placeholder = "dd/mm/yyyy", @readonly = "true" })
                                </div>
                            </div>
                            <div class="col-lg-3" style="margin-top:15px;">
                                <div class="form-group">
