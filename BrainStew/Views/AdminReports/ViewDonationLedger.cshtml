                                    <input type="submit" id="btnSearch" class="btn btn-success pull-left" name="btnSearch" value="Search" />
                               
                                </div>
                            </div>
                        </div>*@
                        <div class="widget-content widget-content-area br-6">

                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Mobile Number</th>
                                        <th>PinCode</th>
                                        <th>Pan Number</th>
                                        <th>Address</th>
                                        <th>Donation Amount</th>
                                        <th>Donation Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstledger != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstledger)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.Name</td>
                                                    <td>@Item.Email</td>
                                                    <td>@Item.MobileNo</td>
                                                    <td>@Item.PinCode</td>
                                                    <td>@Item.PanNo</td>
                                                    <td>@Item.Address</td>
                                                    <td>@Item.DontaionAmount</td>
                                                    <td>@Item.DonationDate</td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
