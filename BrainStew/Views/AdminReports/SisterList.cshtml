@model BrainStew.Models.AdminReports

@{
    ViewBag.Title = "SisterList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SisterList", "AdminReports", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Sisters List</h4>
                                <span class="text-danger">
                                    @TempData["Donation"]
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="widget-content widget-content-area br-6">
                            <center>
                                <a href="/AdminReports/DonationList" class="btn btn-info btn-sm">Back</a>
                            </center>
                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Name</th>
                                        <th>Age</th>
                                        @*<th>Gender</th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstSister != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstSister)
                                            {

                                                if (Item.Gender == "F")
                                                {
                                                    <tr class="text-left">
                                                        <td>@i</td>
                                                        <td>@Item.Name</td>
                                                        <td>@Item.Age</td>
                                                        @*<td>@Item.Gender</td>*@
                                                    </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

