@model BrainStew.Models.AdminReports

@{
    ViewBag.Title = "DonationList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("DonationList", "AdminReports", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Donation List</h4>
                                <span class="text-danger">
                                    @TempData["Donation"]
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Father Name</label>
                                    @Html.TextBoxFor(m => m.FatherName, new { @class = "form-control", @placeholder = "Father Name" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Mother Name</label>
                                    @Html.TextBoxFor(m => m.MotherName, new { @class = "form-control", @placeholder = "Mother Name" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>From Date</label>
                                    @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @placeholder = "dd/mm/yyyy",@readonly="true" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>To Date</label>
                                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @placeholder = "dd/mm/yyyy", @readonly = "true" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <br />
                                    <input type="submit" id="btnSearch" class="btn btn-success pull-left" name="Search" value="Search"/>
                                </div>
                            </div>
                        </div>

                        <div class="widget-content widget-content-area br-6">

                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Member No</th>
                                        <th>Child Name</th>
                                        <th>Gender</th>
                                        <th>DOB</th>
                                        <th>Father Name</th>
                                        <th>Mother Name</th>
                                        <th>Sister's Name</th>
                                        <th>Sister's Age</th>
                                        <th>Brother's Name</th>
                                        <th>Brother's Age</th>
                                        <th>Family Work</th>
                                        <th>Need</th>
                                        <th>Need Amount</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstdonation != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstdonation)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.MemberNo</td>
                                                    <td>@Item.ChildName</td>
                                                    <td>@Item.Gender</td>
                                                    <td>@Item.DOB</td>
                                                    <td>@Item.FatherName</td>
                                                    <td>@Item.MotherName</td>
                                                    <td>@Item.SisterName</td>
                                                    <td>@Item.SisterAge</td>
                                                    <td>@Item.BrotherName</td>
                                                    <td>@Item.BrotherAge</td>
                                                    <td>@Item.FamilyWork</td>
                                                    <td>@Item.Need</td>
                                                    <td>@Item.NeedAmount</td>
                                                    <td><a href="javascript:void(0)" class="btn btn-danger btn-sm" onclick="DeleteDonation(@Item.DonationId)">Delete</a></td>
                                                </tr>
                                                i++;
                                            }

                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />
<script>
    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });





    function DeleteDonation(Id) {
        debugger;
        var r = confirm('Are you sure you want to delete this record ?');
        if (r == true) {
            $.ajax({
                type: 'post',
                url: '/Admin/DeleteDonation',
                dataType: 'json',
                data: { 'Id': Id },
                success: function (data) {
                    window.location.href = '/AdminReports/DonationList';
                },
                Error: function () {
                    //alert('Record not deleted');
                }
            });
        }
    }



    </script>