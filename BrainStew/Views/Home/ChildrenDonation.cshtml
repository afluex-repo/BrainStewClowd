<script>
    function SaveBillingDetails() {
        debugger;
        var FK_DonationId = $("#DonationId").val();
        var FirstName = $("#FirstName").val();
        var LastName = $("#LastName").val();
        var Email = $("#Email").val();
        var Mobile = $("#Mobile").val();
        var City = $("#City").val();
        var PinCode = $("#PinCode").val();
        var ZipPostalCode = $("#ZipPostalCode").val();
        var PanNumber = $("#PanNumber").val();
        var Address = $("#Address").val();
        var TotalDonation = $("#TotalDonation").val();

        if ($("#FirstName").val() == "") {
            $("#FirstName").addClass('errortext');
            $("#FirstName").focus();
            return false;
        }
        else if ($("#Email").val() == "") {
            $("#Email").addClass('errortext');
            $("#Email").focus();
            return false;
        }
        else if ($("#Mobile").val() == "") {
            $("#Mobile").addClass('errortext');
            $("#Mobile").focus();
            return false;
        }
        else if ($("#City").val() == "") {
            $("#City").addClass('errortext');
            $("#City").focus();
            return false;
        }
        else if ($("#PinCode").val() == "") {
            $("#PinCode").addClass('errortext');
            $("#PinCode").focus();
            return false;
        }
        else if ($("#ZipPostalCode").val() == "") {
            $("#ZipPostalCode").addClass('errortext');
            $("#ZipPostalCode").focus();
            return false;
        }
        else if ($("#PanNumber").val() == "") {
            $("#PanNumber").addClass('errortext');
            $("#PanNumber").focus();
            return false;
        }
        else if ($("#TotalDonation").val() == "") {
            $("#TotalDonation").addClass('errortext');
            $("#TotalDonation").focus();
            return false;
        }
        else {
            $.ajax({
                url: '/Home/SaveBillingDetails',
                type: 'Post',
                dataType: 'json',
                data: { FK_DonationId: FK_DonationId, FirstName: FirstName, LastName: LastName, Email: Email, Mobile: Mobile, City: City, PinCode: PinCode, ZipPostalCode: ZipPostalCode, PanNumber: PanNumber, Address: Address, TotalDonation: TotalDonation },
                success: function (data) {
                    if (data.Result == "yes") {
                        debugger;
                        alert('Donated amount succesfully !!');
                        var url = "/Home/ChildrenDonation?Id=" + FK_DonationId;
                        window.location.href = url;
                    }
                    else {
                        alert(data.Result);
                    }
                }
            });
        }
    }

    $(document).ready(function () {
        $("#donate_btn").click(function () {
            $(".donation_form").toggle();
        });
    });


    function isNumberKey(evt) {

        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }


    function onlyAlphabets(e, t) {
        try {
            if (window.event) {
                var charCode = window.event.keyCode;
            }
            else if (e) {
                var charCode = e.which;
            }
            else { return true; }
            if ((charCode > 64 && charCode < 91) || (charCode > 96 && charCode < 123))
                return true;
            else
                return false;
        }
        catch (err) {
            alert(err.Description);
        }
    }

</script>
